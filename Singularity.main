Bootstrap: docker
From: nfcore/base


%environment

    PATH=/opt/conda/envs/BarquistLab-Dual_RNA_seq/bin:$PATH
    export PATH

    PYTHONPATH=/opt/conda/envs/BarquistLab-Dual_RNA_seq/lib/python3.6/site-packages/:$PYTHONPATH
    export PYTHONPATH


%files
    environment.yml 

%post

    alias conda="/opt/conda/bin/conda"    

    /opt/conda/bin/conda env create -f /environment.yml
    conda clean --tarballs --index-cache --source-cache 

