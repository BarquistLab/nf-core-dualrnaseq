/*
0 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/dualrnaseq -profile test,<docker/singularity>
 */

params {
  config_profile_name = 'Test profile'
  config_profile_description = 'Minimal test dataset to check pipeline function'
  
  // Limit resources so that this can run on GitHub Actions
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h

  // Input data
  single_end = false

  //salmon
  libtype = "ISF" //paired-end reads


  readPaths = [
    ['sample_01', ['https://github.com/nf-core/test-datasets/tree/dualrnaseq/PE_reads/sample_01_1.fq.gz', 'https://github.com/nf-core/test-datasets/tree/dualrnaseq/PE_reads/sample_01_2.fq.gz']],
    ['sample_02', ['https://github.com/nf-core/test-datasets/tree/dualrnaseq/PE_reads/sample_02_1.fq.gz', 'https://github.com/nf-core/test-datasets/tree/dualrnaseq/PE_reads/sample_02_2.fq.gz']],
    ['sample_03', ['https://github.com/nf-core/test-datasets/tree/dualrnaseq/PE_reads/sample_03_1.fq.gz', 'https://github.com/nf-core/test-datasets/tree/dualrnaseq/PE_reads/sample_03_2.fq.gz']]
  ]

}


// Genome references
params {
  genomes {
    'test_host' {
      fasta_host  = "/vol/projects/bmikagos/Dual_RNA_seq/nf-core-dualrnaseq/data/Test_data/references/GRCh38.p13.1-29570.fa"    // "https://github.com/nf-core/test-datasets/tree/dualrnaseq/references/GRCh38.p13_sub.fasta"
      gff_host = "/vol/projects/bmikagos/Dual_RNA_seq/nf-core-dualrnaseq/data/Test_data/references/gencode.v33.11869-29570.annotation.gff3"   //https://github.com/nf-core/test-datasets/tree/dualrnaseq/references/Human_gencode.v33_sub.gff3"
      gff_host_tRNA = ""
    }
    'test_pathogen' {
      fasta_pathogen  = "/vol/projects/bmikagos/Dual_RNA_seq/nf-core-dualrnaseq/data/Test_data/references/FQ312003_1_15961.fasta"  //"https://github.com/nf-core/test-datasets/tree/dualrnaseq/references/SL1344_sub.fasta"
      gff_pathogen = "/vol/projects/bmikagos/Dual_RNA_seq/nf-core-dualrnaseq/data/Test_data/references/FQ312003_169_15961.gff3" //"https://github.com/nf-core/test-datasets/tree/dualrnaseq/references/SL1344_sub.gff3"
    }
  }
genome_host = 'test_host'
genome_pathogen = 'test_pathogen'
}







